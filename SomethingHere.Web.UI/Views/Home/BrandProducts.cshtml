@using SomethingHere.DataAccess
@{
    ViewBag.Title = "BrandProducts";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="center_title_bar">@ViewBag.List[0].Brand.Name Brand Products (@ViewBag.List.Count)</div>
@foreach (Product item in ViewBag.List)
{
    <div class="prod_box">
        <div class="top_prod_box"></div>
        <div class="center_prod_box">
            <div class="product_title"><a href="/Home/ProductDetail/@item.ID">@item.Brand.Name-@item.ProductName</a></div>
            <div class="product_img">
                <a href="details.html">

                    <img src="@item.ProductImage.Where(p=>p.IsActive==true).FirstOrDefault().ImagePath" alt="" border="0" />

                </a>
            </div>
            <div class="prod_price"><span class="reduce">@item.Price</span> <span class="price">@item.Price</span></div>
        </div>
        <div class="bottom_prod_box"></div>
        <div class="prod_details_tab"> <a href="#" title="header=[Add to cart] body=[&nbsp;] fade=[on]"><img src="~/Images/cart.gif" alt="" border="0" class="left_bt" /></a> <a href="#" title="header=[Specials] body=[&nbsp;] fade=[on]"><img src="~/Images/favs.gif" alt="" border="0" class="left_bt" /></a> <a href="#" title="header=[Gifts] body=[&nbsp;] fade=[on]"><img src="~/Images/favorites.gif" alt="" border="0" class="left_bt" /></a> <a href="details.html" class="prod_details">details</a> </div>
    </div>

}

